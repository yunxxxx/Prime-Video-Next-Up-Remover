{
  "name": "Amazon Prime Video Next Up Remover",
  "description": "Base Level Extension",
  "version": "1.0",
  "permissions": ["storage", "tabs", "scripting"],

  "host_permissions": [
    "https://*.amazon.com/*",
    "https://*.amazon.co.uk/*",
    "https://*.amazon.de/*",
    "https://*.amazon.fr/*",
    "https://*.amazon.it/*",
    "https://*.amazon.es/*",
    "https://*.amazon.ca/*",
    "https://*.amazon.com.au/*",
    "https://*.amazon.in/*",
    "https://*.amazon.co.jp/*",
    "https://*.amazon.com.br/*",
    "https://*.amazon.mx/*",
    "https://*.amazon.com.tr/*",
    "https://*.amazon.ae/*",
    "https://*.amazon.sa/*",
    "https://*.amazon.nl/*",
    "https://*.amazon.se/*",
    "https://*.amazon.no/*",
    "https://*.amazon.dk/*",
    "https://*.amazon.pl/*",
    "https://*.amazon.au/*",
    "https://*.amazon.sg/*",
    "https://*.amazon.hk/*",
    "https://*.amazon.tw/*",
    "https://*.amazon.co.th/*",
    "https://*.amazon.my/*"
  ],

  "manifest_version": 3,

  "background": {
    "service_worker": "backend.js"
  },

  "action": {
    "default_popup": "hello.html",
    "default_icon": "remover_icon.png"
  },

  "icons": {
    "16": "remover_icon.png",
    "48": "remover_icon.png",
    "128": "remover_icon.png"
  }
}
